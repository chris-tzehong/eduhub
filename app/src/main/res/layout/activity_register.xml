<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/editTextName"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/register_backgroundgradient"
    tools:context=".Register">

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="520dp"
        android:layout_marginBottom="80dp"
        android:layout_marginEnd="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="80dp"
        android:background="@color/darkGray"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.504">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/lightGray">

            <TextView
                android:id="@+id/textViewRegisterIntro1"
                android:layout_width="221dp"
                android:layout_height="wrap_content"
                android:paddingBottom="0dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="12dp"
                android:text="Join us now!"
                android:textSize="24sp"
                app:fontFamily="@font/jockey_one" />

            <TextView
                android:id="@+id/textViewRegisterIntro2"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textViewRegisterIntro1"
                android:layout_marginBottom="15dp"
                android:paddingLeft="12dp"
                android:paddingTop="5dp"
                android:text="Get your free education material."
                app:fontFamily="@font/scada" />

            <ImageView
                android:id="@+id/imageViewBookRegister"
                android:layout_width="99dp"
                android:layout_height="80dp"
                android:layout_alignBottom="@+id/textViewRegisterIntro2"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="-6dp"
                android:padding="10dp"
                app:srcCompat="@drawable/registerclipart" />

        </RelativeLayout>

        <EditText
            android:id="@+id/editTextNameRegister"
            style="@style/RegisterField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="Name"
            android:inputType="textPersonName" />

        <RelativeLayout
            android:id="@+id/relativeLayoutNameErrorRegister"
            style="@style/RegisterFieldError"
            android:layout_width="match_parent">

            <ImageView
                android:id="@+id/imageViewAlertNameRegister"
                style="@style/RegisterFieldErrorSymbol"
                android:layout_width="26dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                app:srcCompat="@drawable/red_alert" />

            <TextView
                android:id="@+id/textViewNameErrorRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/imageViewAlertNameRegister"
                android:text="This field cannot be blank." />
        </RelativeLayout>

        <EditText
            android:id="@+id/editTextUserNameRegister"
            style="@style/RegisterField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="User Name"
            android:inputType="textPersonName" />

        <RelativeLayout
            android:id="@+id/relativeLayoutUserNameErrorRegister"
            style="@style/RegisterFieldError"
            android:layout_width="match_parent">

            <ImageView
                android:id="@+id/imageViewAlertNameRegister"
                style="@style/RegisterFieldErrorSymbol"
                android:layout_width="26dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                app:srcCompat="@drawable/red_alert" />

            <TextView
                android:id="@+id/textViewUserNameErrorRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/imageViewAlertNameRegister"
                android:text="TextView" />
        </RelativeLayout>

        <EditText
            android:id="@+id/editTextEmailRegister"
            style="@style/RegisterField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="E-mail"
            android:inputType="textEmailAddress" />

        <RelativeLayout
            android:id="@+id/relativeLayoutEmailErrorRegister"
            style="@style/RegisterFieldError"
            android:layout_width="match_parent">

            <ImageView
                android:id="@+id/imageViewAlertEmailRegister"
                style="@style/RegisterFieldErrorSymbol"
                android:layout_width="26dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                app:srcCompat="@drawable/red_alert" />

            <TextView
                android:id="@+id/textViewEmailErrorRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/imageViewAlertEmailRegister"
                android:text="TextView" />
        </RelativeLayout>

        <EditText
            android:id="@+id/editTextPasswordRegister"
            style="@style/RegisterField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword" />

        <RelativeLayout
            android:id="@+id/relativeLayoutPasswordErrorRegister"
            style="@style/RegisterFieldError"
            android:layout_width="match_parent">

            <ImageView
                android:id="@+id/imageViewAlertPasswordRegister"
                style="@style/RegisterFieldErrorSymbol"
                android:layout_width="26dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                app:srcCompat="@drawable/red_alert" />

            <TextView
                android:id="@+id/textViewPasswordErrorRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/imageViewAlertPasswordRegister"
                android:text="TextView" />
        </RelativeLayout>

        <EditText
            android:id="@+id/editTextConfirmPasswordRegister"
            style="@style/RegisterField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Confirm Password"
            android:inputType="textPassword" />

        <RelativeLayout
            android:id="@+id/relativeLayoutConfirmPasswordErrorRegister"
            style="@style/RegisterFieldError"
            android:layout_width="match_parent">

            <ImageView
                android:id="@+id/imageViewAlertConfirmPasswordRegister"
                style="@style/RegisterFieldErrorSymbol"
                android:layout_width="26dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/red_alert" />

            <TextView
                android:id="@+id/textViewConfirmPasswordErrorRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/imageViewAlertConfirmPasswordRegister"
                android:text="TextView" />
        </RelativeLayout>

        <Button
            android:id="@+id/buttonConfirmRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:background="#71a0f2"
            android:padding="5dp"
            android:text="Register" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>