<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment">

<android.support.constraint.ConstraintLayout android:layout_height="match_parent"
    android:layout_width="match_parent">

    <LinearLayout
        android:id="@+id/linearLayoutImmutableProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/btnEditProfile"
        android:layout_toRightOf="@+id/btnEditProfile"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/btnEditProfile"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/textViewImmutableNameProfile"
            style="@style/ProfileImmutableText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:visibility="visible"
            tools:text="Name" />

        <TextView
            android:id="@+id/textViewImmutableUserNameProfile"
            style="@style/ProfileImmutableText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User Name" />

        <TextView
            android:id="@+id/textViewImmutableEmailProfile"
            style="@style/ProfileImmutableText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="E-mail" />
    </LinearLayout>

    <Button
        android:id="@+id/btnEditProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:layout_marginEnd="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginStart="100dp"
        android:background="@drawable/rounded_edge"
        android:text="Edit Profile"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:fontFamily="@font/mclaren"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayoutMutableProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/btnEditProfile"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/textViewMutableNameProfile"
            style="@style/ProfileMutableText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tan Tze Hong" />

        <TextView
            android:id="@+id/textViewMutableUserNameProfile"
            style="@style/ProfileMutableText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <TextView
            android:id="@+id/textViewMutableEmailProfile"
            style="@style/ProfileMutableText"
            android:layout_height="wrap_content"
            android:text="tth980409@gmail.com" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="395dp"
        android:layout_height="259dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/view"
            android:layout_width="190dp"
            android:layout_height="203dp"
            android:layout_centerInParent="true"
            android:background="@drawable/photo_frame2" />

        <ImageView
            android:id="@+id/imageViewProfilePic"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            android:background="@drawable/round_shape"
            app:srcCompat="@drawable/default_profile_pic3" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/imageViewProfilePic"
            android:layout_marginEnd="71dp"
            android:layout_marginTop="-8dp"
            android:background="@android:color/transparent"
            android:src="@drawable/graduation_hat_cert" />

    </RelativeLayout>



</android.support.constraint.ConstraintLayout>

</FrameLayout>