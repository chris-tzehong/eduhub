<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.eduhub">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/graduation_hat_cert"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/CustomActionBarTheme">
        <activity android:name=".MainActivity"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Register"
            android:windowSoftInputMode="adjustPan"
            android:theme="@style/CustomActionBarTheme"/>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
        <activity
            android:name=".RegisterPopUp"
            android:theme="@style/AppTheme.popUpTheme" />
        <activity
            android:name=".LoginPopUp"
            android:theme="@style/AppTheme.popUpTheme" />
        <activity
            android:name=".ContentMainActivity"
            android:label="@string/title_activity_content_main"
            android:theme="@style/CustomActionBarThemeForContent"
            android:windowSoftInputMode="adjustPan" />

        <activity android:name=".EditProfilePopUp"
            android:theme="@style/AppTheme.popUpThemeForEdit"/>

        <activity android:name=".maths1MCQ"
            android:theme="@style/CustomActionBarTheme"/>
        <activity android:name=".maths2MCQ"
            android:theme="@style/CustomActionBarTheme"/>
        <activity android:name=".addmath1MCQ"
            android:theme="@style/CustomActionBarTheme"/>
        <activity android:name=".addmath2MCQ"
            android:theme="@style/CustomActionBarTheme"/>
        <activity android:name=".phy1MCQ"
            android:theme="@style/CustomActionBarTheme"/>
        <activity android:name=".phy2MCQ"
            android:theme="@style/CustomActionBarTheme"/>
        <activity android:name=".chem1MCQ"
            android:theme="@style/CustomActionBarTheme"/>
        <activity android:name=".chem2MCQ"
            android:theme="@style/CustomActionBarTheme"/>
        <activity android:name=".bio1MCQ"
            android:theme="@style/CustomActionBarTheme"/>
        <activity android:name=".bio2MCQ"
            android:theme="@style/CustomActionBarTheme"/>
    </application>

</manifest>